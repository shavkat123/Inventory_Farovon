<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/galleryRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Preview камеры -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay (рамка) -->
    <ImageView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/barcode_overlay"
        android:scaleType="fitXY"
        android:contentDescription="@string/overlay_desc" />

    <!-- Подсказка -->
    <TextView
        android:id="@+id/tvScanHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наведите штрихкод в рамку"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="24dp" />

    <!-- Результат -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp" />

    <!-- Кнопка при отказе в разрешении -->
    <Button
        android:id="@+id/btnRequestPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разрешить камеру (открыть настройки)"
        android:visibility="gone"
        android:layout_gravity="center" />

</FrameLayout>
