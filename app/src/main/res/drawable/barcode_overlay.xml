<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- затемняем весь экран -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88000000"/>
        </shape>
    </item>

    <!-- прозрачное окно в центре с рамкой -->
    <item android:left="40dp" android:top="140dp" android:right="40dp" android:bottom="140dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="3dp" android:color="#F59E0B" /> <!-- фирменный жёлто-оранжевый -->
        </shape>
    </item>

</layer-list>
